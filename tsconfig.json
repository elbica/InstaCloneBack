{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "removeComments": true,
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "ts-node": {
    "compilerOptions": {
      "noImplicitAny": false
    }
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*"]
}
